<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity"
  android:background="@color/colorPrimary"
  >
  <TextView
    android:layout_width="56dp"
    android:layout_height="20dp"
    android:text="@string/bill"
    app:layout_constraintBottom_toTopOf="@+id/billTextInput"
    app:layout_constraintStart_toStartOf="@+id/billTextInput"
    />
  <EditText
    android:id="@+id/billTextInput"
    android:layout_width="150dp"
    android:layout_height="40dp"
    android:layout_margin="40dp"
    android:inputType="number"
    app:layout_constraintEnd_toStartOf="@+id/tipTextView"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />
  <TextView
    android:layout_width="56dp"
    android:layout_height="20dp"
    android:text="@string/tip"
    app:layout_constraintBottom_toTopOf="@+id/percentTextInput"
    app:layout_constraintStart_toStartOf="@id/percentTextInput"
    />
  <EditText
    android:id="@+id/percentTextInput"
    android:layout_width="150dp"
    android:layout_height="40dp"
    android:layout_margin="40dp"
    android:inputType="number"
    app:layout_constraintEnd_toStartOf="@+id/totalTextView"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/billTextInput"
    />
  <TextView
    android:layout_width="56dp"
    android:layout_height="20dp"
    android:text="@string/tip_label"
    app:layout_constraintBottom_toTopOf="@+id/tipTextView"
    app:layout_constraintStart_toStartOf="@+id/tipTextView"
    />
  <TextView
    android:id="@+id/tipTextView"
    android:layout_width="150dp"
    android:layout_height="40dp"
    android:layout_margin="40dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/billTextInput"
    app:layout_constraintTop_toTopOf="parent"
    android:gravity="center"
    />
  <TextView
    android:layout_width="56dp"
    android:layout_height="20dp"
    android:text="@string/total"
    app:layout_constraintBottom_toTopOf="@+id/totalTextView"
    app:layout_constraintStart_toStartOf="@+id/totalTextView"
    />
  <TextView
    android:id="@+id/totalTextView"
    android:layout_width="150dp"
    android:layout_height="40dp"
    android:layout_margin="40dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/percentTextInput"
    app:layout_constraintTop_toBottomOf="@id/tipTextView"
    android:gravity="center"
    />
  <Button
    android:id="@+id/submitButton"
    android:layout_width="237dp"
    android:layout_height="56dp"
    android:layout_marginTop="40dp"
    android:text="@string/calculate"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/totalTextView"
    />

</androidx.constraintlayout.widget.ConstraintLayout>